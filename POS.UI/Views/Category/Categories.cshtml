@using POS.Data.Models;
@model IEnumerable<CategoryModel>

@section styles {
    <link href="~/app/css/user.css" rel="stylesheet" />
}

<div class="Container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6">Users</div>
                <div class="col-6 d-flex justify-content-end">
                    <a class="btn btn-primary" asp-action="AddCategory">Add Category</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table id="myCategoryTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Category_Name</td>
                            <td>@category.Description</td>
                            @if (@category.Status)
                            {
                                <td>Active</td>
                            }
                            else
                            {
                                <td>Not Active</td>
                            }

                            <td>
                                <a class="btn btn-primary" asp-action="AddCategory" asp-route-id="@category.Category_ID" title="Edit"><i class="fa-regular fa-pen-to-square"></i></a>
                                <a class="btn btn-danger" asp-action="DeleteCategory" asp-route-id="@category.Category_ID" title="Delete"><i class="fa-regular fa-trash-can"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~\app\js\category.js"></script>
}