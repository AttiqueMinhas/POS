<!-- Modal Delete User Confirmation-->
<div class="modal fade" id="delUserConfirmationModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6>Are you sure u want to delete this user?</h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary cancel">Cancel</button>
                <button type="button" class="btn btn-primary ok">Yes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/app/js/user.js"></script>
}





